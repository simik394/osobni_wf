job "rsrch" {
  datacenters = ["oci-eu"]
  type        = "service"

  group "server" {
    count = 1

    network {
      mode = "host"
      port "http" {
        static = 3030
      }
    }

    constraint {
      attribute = "${node.class}"
      value     = "cloud"
    }

    task "rsrch-server" {
      driver = "docker"

      config {
        image = "ghcr.io/{{ github_repository | default('simik394/osobni_wf') }}/rsrch:latest"
        network_mode = "host"
        mounts = [
          {
            type     = "bind"
            target   = "/secrets/auth.json"
            source   = "/opt/rsrch/secrets/auth.json"
            readonly = true
          }
        ]
      }

      env {
        PORT = "3030"
        BROWSER_CDP_ENDPOINT = "http://localhost:9223"
        AUTH_FILE = "/secrets/auth.json"
        HEADLESS = "true" 
        DEBUG = "rsrch:*"
        FALKORDB_HOST = "localhost"
        FALKORDB_PORT = "7687"
      }


      # Resources
      resources {
        cpu    = 200
        memory = 1024
      }

      service {
        name = "rsrch-server"
        port = "http"
        
        tags = [
          "rsrch",
          "api",
          "traefik.enable=true",
          "traefik.http.routers.rsrch.rule=Host(`rsrch.service.consul`)",
        ]
        
        check {
          name     = "http-health"
          type     = "http"
          path     = "/health" # verify if rsrch has a health endpoint, usually / or /json/version if generic? Assume / for now or check code.
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
