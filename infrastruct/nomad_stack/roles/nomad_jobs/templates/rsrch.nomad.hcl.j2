job "rsrch" {
  datacenters = ["oci-eu"]
  type        = "service"

  group "server" {
    count = 1

    network {
      mode = "host"
      port "http" {
        static = 3030
      }
    }

    constraint {
      attribute = "${node.class}"
      value     = "cloud"
    }

    task "rsrch-server" {
      driver = "docker"

      config {
        image = "ghcr.io/{{ github_repository | default('simik394/osobni_wf') }}/rsrch:latest"
        network_mode = "host"
        mounts = [
          {
            type     = "bind"
            target   = "/opt/rsrch/profiles"
            source   = "/opt/rsrch/profiles"
            readonly = false
          }
        ]
      }

      # Vault integration for secrets (DISABLED: Nomad 1.10.5 Workload Identity issues)
      # TODO: Re-enable when Nomad/Vault WI is properly configured
      # vault {
      #   policies = ["agents"]
      # }
      #
      # template {
      #   data = <<EOF
      # {% raw %}
      # {{- with secret "secret/data/agents/windmill" }}
      # WINDMILL_TOKEN={{ .Data.data.token }}
      # ...
      # {% endraw %}
      # EOF
      #   destination = "secrets/vault.env"
      #   env         = true
      # }

      env {
        PORT = "3030"
        BROWSER_CDP_ENDPOINT = "http://localhost:9223"
        AUTH_FILE = "/secrets/auth.json"
        HEADLESS = "true" 
        DEBUG = "rsrch:*"
        FALKORDB_HOST = "localhost"
        FALKORDB_PORT = "6379"
        # Windmill token from Vault - temporarily hardcoded until WI issues resolved
        WINDMILL_TOKEN = "{{ windmill_token | default('') }}"
        WINDMILL_URL = "http://localhost:8000"
        WINDMILL_WORKSPACE = "knowlage"
      }



      # Resources
      resources {
        cpu    = 200
        memory = 1024
      }

      service {
        name = "rsrch-server"
        port = "http"
        
        tags = [
          "rsrch",
          "api",
          "traefik.enable=true",
          "traefik.http.routers.rsrch.rule=Host(`rsrch.service.consul`)",
        ]
        
        check {
          name     = "http-health"
          type     = "http"
          path     = "/health"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
