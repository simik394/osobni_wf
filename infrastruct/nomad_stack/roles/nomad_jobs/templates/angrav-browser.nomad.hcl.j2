job "angrav-browser" {
  datacenters = ["{{ nomad_datacenter | default("dc1") }}"]
  type        = "service"

  # Antigravity (Windsurf IDE) Browser Container
  # VNC: 5901, CDP Proxy: 9224
  # Note: 5900/9223 used by rsrch-browser

  group "browser" {
    count = 1

    network {
      mode = "host"
    }

    constraint {
      attribute = "${node.class}"
      value     = "cloud"
    }

    task "angrav" {
      driver = "docker"

      config {
        image = "angrav-browser:v1"
        network_mode = "host"
        
        volumes = [
          "/opt/angrav/profiles/default:/home/angrav/.config/Antigravity",
          "/opt/angrav/workspace:/workspace"
        ]
      }

      resources {
        cpu    = 1000
        memory = 4096
      }

      service {
        name = "angrav-browser-vnc"
        port = 5901
        address_mode = "driver"
        tags = ["browser", "vnc", "angrav"]
      }

      service {
        name = "angrav-browser-cdp"
        port = 9224
        address_mode = "driver"
        tags = ["browser", "cdp", "angrav"]
        
        check {
          name         = "cdp-health"
          type         = "http"
          path         = "/json/version"
          port         = 9224
          address_mode = "driver"
          interval     = "10s"
          timeout      = "5s"
        }
      }
    }
  }
}
