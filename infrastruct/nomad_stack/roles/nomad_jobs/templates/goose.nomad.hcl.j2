job "goose" {
  datacenters = ["oci-eu"]
  type        = "service"

  group "goose" {
    count = 1

    network {
      mode = "host"
      port "http" {
        static = 3001
      }
    }

    constraint {
      attribute = "${node.class}"
      value     = "cloud"
    }

    task "goose" {
      driver = "docker"

      config {
        image        = "ghcr.io/block/goose:latest"
        network_mode = "host"
        interactive  = true
        tty          = true
        
        # Mount config and state directories to the correct user home (uid 1000)
        mounts = [
          {
            type     = "bind"
            target   = "/home/goose/.config/goose"
            source   = "/opt/goose/config"
            readonly = false
          },
          {
            type     = "bind"
            target   = "/home/goose/.local/state/goose"
            source   = "/opt/goose/state"
            readonly = false
          }
        ]

        # Run goose web interface
        entrypoint = ["goose"]
        args       = ["web", "--host", "0.0.0.0", "--port", "3001"]
      }

      env {
        # Provider configuration
        GOOSE_PROVIDER       = "openai"
        GOOSE_PROVIDER_TYPE  = "openai"
        
        # OpenAI settings
        OPENAI_API_KEY       = "dummy"
        OPENAI_BASE_URL      = "http://localhost:3030/v1"
        OPENAI_HOST          = "http://localhost:3030"
        
        # Model
        GOOSE_MODEL          = "gemini-rsrch"
      }

      resources {
        cpu    = 500
        memory = 1024
      }

      service {
        name = "goose"
        port = "http"
        
        tags = [
          "goose",
          "ai-agent",
          "traefik.enable=true",
          "traefik.http.routers.goose.rule=Host(`goose.{{ traefik_domain | default('100.73.45.27.nip.io') }}`)",
          "traefik.http.routers.goose.entrypoints=web",
        ]
        
        check {
          name     = "goose-web-health"
          type     = "http"
          path     = "/"
          interval = "30s"
          timeout  = "5s"
        }
      }
    }
  }
}
