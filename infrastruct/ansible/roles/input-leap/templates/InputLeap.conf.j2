# Input Leap Server Configuration
# Generated by Ansible - do not edit manually

section: screens
    {{ input_leap_server_name }}:
{% for client in input_leap_clients %}
    {{ client.name }}:
{% endfor %}
end

section: links
    {{ input_leap_server_name }}:
{% for client in input_leap_clients %}
        {{ client.position }} = {{ client.name }}
{% endfor %}
{% for client in input_leap_clients %}
    {{ client.name }}:
{% if client.position == 'left' %}
        right = {{ input_leap_server_name }}
{% elif client.position == 'right' %}
        left = {{ input_leap_server_name }}
{% elif client.position == 'up' %}
        down = {{ input_leap_server_name }}
{% elif client.position == 'down' %}
        up = {{ input_leap_server_name }}
{% endif %}
{% endfor %}
end

section: options
    relativeMouseMoves = false
    screenSaverSync = false
    switchCorners = none
    switchOnDoubleTap = 500
    keystroke(super+shift+left) = switchInDirection(left)
    keystroke(super+shift+right) = switchInDirection(right)
end
