{
    "name": "Logic-Driven IaC",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/workspaces/logic-driven-iac",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/logic-driven-iac,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "arthurwang.vsc-prolog",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.testing.pytestEnabled": true,
                "editor.formatOnSave": true
            }
        }
    },
    "postCreateCommand": "sudo pip3 install --break-system-packages -r requirements.txt",
    "remoteUser": "vscode",
    "containerEnv": {
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUNBUFFERED": "1"
    }
}